<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <solid android:color="#3276b1" />
            <stroke
                android:width="1dp"
                android:color="#285e8e" />
            <corners android:radius="4dp" />
            <padding
                android:top="10px"
                android:bottom="10px"
                android:left="16px"
                android:right="16px" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#3276b1" />
            <stroke
                android:width="1dp"
                android:color="#285e8e" />
            <corners android:radius="4dp" />
            <padding
                android:top="10px"
                android:bottom="10px"
                android:left="16px"
                android:right="16px" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#428bca" />
            <stroke
                android:width="1dp"
                android:color="#357ebd" />
            <corners android:radius="4dp" />
            <padding
                android:top="10px"
                android:bottom="10px"
                android:left="16px"
                android:right="16px" />
        </shape>
    </item>

</selector>
